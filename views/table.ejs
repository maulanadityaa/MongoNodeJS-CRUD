<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-outline-primary btn-sm"
      data-toggle="modal"
      data-target="#add-modal"
    >
      Add
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>NIM</th>
            <th>Jurusan</th>
            <th>Alamat</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < mahasiswa.length; index++ ) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= mahasiswa[index].nama %></td>
            <td><%= mahasiswa[index].nim %></td>
            <td><%= mahasiswa[index].jurusan %></td>
            <td><%= mahasiswa[index].alamat %></td>
            <td class="text-center">
              <form
                action="/mahasiswa/<%= mahasiswa[index].id %>?_method=DELETE "
                method="post"
              >
                <a
                  href="javascript:void()"
                  class="btn btn-outline-warning btn-sm button-update"
                  data-id="<%= mahasiswa[index].id %>"
                  data-nim="<%= mahasiswa[index].nim %>"
                  data-nama="<%= mahasiswa[index].nama %>"
                  data-jurusan="<%= mahasiswa[index].jurusan %>"
                  data-alamat="<%= mahasiswa[index].alamat %>"
                  >Edit</a
                >
                <button
                  type="submit"
                  class="btn btn-outline-danger btn-sm"
                  onclick="return confirm('Yakin akan hapus data?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
